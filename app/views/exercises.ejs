<!DOCTYPE html>
<html lang="en">

<head>

	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="">
	<meta name="author" content="">

	<title>Team Seven</title>

	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0/angular.min.js"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0/angular-route.min.js"></script>

	<!-- Bootstrap Core CSS -->
	<link href="css/bootstrap.min.css" rel="stylesheet">

	<!-- Custom CSS -->
	<link href="css/sb-admin.css" rel="stylesheet">

	<!-- Morris Charts CSS -->
	<link href="css/plugins/morris.css" rel="stylesheet">

	<!-- Custom Fonts -->
	<link href="font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

	<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
	<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
	<!--[if lt IE 9]>
			<script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
			<script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
		<![endif]-->

</head>

<body ng-app="Workout" , ng-controller="WorkoutCtrl">

	<div id="wrapper">

		<!-- Navigation -->
		<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
			<!-- Brand and toggle get grouped for better mobile display -->
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="/">Team Seven Workout App</a>
			</div>


			<!-- Top Menu Items -->
			<ul class="nav navbar-right top-nav">
				<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i><%=name%><b class="caret"></b></a>
					<ul class="dropdown-menu">
						<li>
							<a href="/logout"><i class="fa fa-fw fa-power-off"></i> Log Out</a>
						</li>
					</ul>
				</li>
			</ul>


			<!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
			<div class="collapse navbar-collapse navbar-ex1-collapse">
				<ul class="nav navbar-nav side-nav">
					<li class="user-side-image">
						<img src="images/userimages/<%=img_name%>.jpg" class="img-circle" alt="" />
					</li>
					<li class="user-side-name">
						<h3><%=name%></h3>
					</li>
					<li>
						<a href="/dashboard"><i class="fa fa-fw fa-dashboard"></i> Dashboard</a>
					</li>
					<li>
						<a href="/preferences"><i class="fa fa-fw fa-edit"></i> Preferences</a>
					</li>
					<li>
						<a href="#"><i class="fa fa-fw fa-bar-chart-o"></i> Progress</a>
					</li>
					<li class="active">
						<a href="/workouts"><i class="fa fa-fw fa-table"></i> Workouts</a>
					</li>
				</ul>
			</div>
			<!-- /.navbar-collapse -->
		</nav>
		<div id="page-wrapper">
			<div class="container-fluid">
				<!-- workout creation -->
				<div class="panel panel-defualt" ng-repeat="workout in workouts">
					<div class="input-group">
						<span class="input-group-addon" id="basic-addon1">Workout Name: </span>
						<input type="text" class="form-control" placeholder="Leg Day" aria-describedby="basic-addon1" ng-model="workout.name" ng-blur="modify(workout)">
					</div>
					<div class="panel-body">
						<div ng-repeat="exercise in workout.exercises">
							<div class="row" ng-if="exercise.type == 'Interval' ">
								<form class="form-inline">
									<div class="form-group col-xs-3">
										<label for="exerciseName">Name</label>
										<input type="text" class="form-control" id="exerciseName" ng-model="exercise.name" placeholder="Front Squat" ng-blur="modify(exercise)">
									</div>

									<div class="form-group col-xs-3">
										<label for="numSets">Sets</label>
										<input type="text" class="form-control" id="numSets" ng-model="exercise.data.sets" placeholder="3" ng-blur="modify(exercise)">
									</div>

									<div class="form-group col-xs-3">
										<label for="intervalTime">Interval</label>
										<input type="text" class="form-control" id="intervalTime" ng-model="exercise.data.time" placeholder="145" ng-blur="modify(exercise)">
									</div>
								</form>
							</div>
							<div class="row" ng-if="exercise.type == 'Reps' " id="exerciseInputBlock">
								<form class="form-inline">
									<div class="form-group col-xs-3">
										<label for="exerciseName2">Name</label>
										<input type="text" class="form-control" id="exerciseName2" ng-model="exercise.name" placeholder="Front Squat" ng-blur="modify(exercise)">
									</div>

									<div class="form-group col-xs-3">
										<label for="numSets2">Sets</label>
										<input type="text" class="form-control" id="numSets2" ng-model="exercise.data.sets" placeholder="3" ng-blur="modify(exercise)">
									</div>

									<div class="form-group col-xs-3">
										<label for="numReps">Reps</label>
										<input type="text" class="form-control" id="numReps" ng-model="exercise.data.reps" placeholder="5" ng-blur="modify(exercise)">
									</div>

									<div class="form-group col-xs-3">
										<label for="startWeight">Starting Weight</label>
										<input type="text" class="form-control" id="startWeight" ng-model="exercise.data.weight" placeholder="145" ng-blur="modify(exercise)">
									</div>
							</div>
							</form>
						</div>
						<br>
						<div class="activitySelect">
							<select class="form-control" id="dropdown" ng-model="selectionType">
								<option>Interval</option>
								<option>Reps</option>
							</select>
							<button type="button" class="btn btn-default" ng-click="newExercise(workout, selectionType)"> + Add Exercise</button>
						</div>
					</div>


				</div>


				<button type="button" class="btn btn-default" ng-click="newWorkout()"> + Custom Workout</button>
				<button type="button" class="btn btn-default" ng-click="saveWorkouts()">Save Workouts</button>
				<p>{{serverMsg}}</p>

			</div>

		</div>
		<!-- /.container-fluid -->

	</div>
	<!-- /#page-wrapper -->

	</div>
	<!-- /#wrapper -->

	<!-- jQuery -->
	<script src="js/jquery.js"></script>

	<!-- Bootstrap Core JavaScript -->
	<script src="js/bootstrap.min.js"></script>

</body>
<script src="js/exercises.js"></script>

</html>
